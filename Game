#install pygame using terminal: pip install pygame

import pygame
  #initializes pygame
pygame.init()
  #sets the window Height, Width
win = pygame.display.set_mode((500,500))
  #adds a caption to the window
pygame.display.set_caption("First Game")

#creates variables for the circle function
x = 250
y = 250
radius = 15

#assigns velocity variable
vel = 10

#keeps the display up and running
run = True
while run:

  #makes the screen refresh every while iteration so you dont have image burn-in
  win.fill((0,0,0))

  #draws a circle and take 4 args. (window, color, location, size)
  pygame.draw.circle(win, (255,255,255), (int(x), int(y)), radius)
  
  #closes window when hitting |X|
  for event in pygame.event.get():
    if event.type == pygame.QUIT:
      run = False
      
  #takes user input  
  userInput = pygame.key.get_pressed()
  
  #assigns what the key presses mean and defines the bounds
  if userInput[pygame.K_LEFT] and x > 0:
    x -= vel
  if userInput[pygame.K_RIGHT] and x < 500:
    x += vel
  if userInput[pygame.K_UP] and y > 0:
    x -= vel
   if userInput[pygame.K_DOWN] and y < 500:
    x += vel
   
   #delays loop by (milliseconds)
   pygame.time.delay(10)
    
  pygame.display.update()
